@model RegisterVM
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--====== Breadcrumb-Area Start ======-->

<section class="breadcrumb-area py-5 py-sm-0">
    <div class=" bg-shade text-center py-4">
        <a asp-controller="home" asp-action="index" class="  text-decoration-none text-white work-sans hover2 t-5">HOME </a>
        <span class=" text-white">/</span>
        <span class=" text-white work-sans">CREATE ACCOUNT</span>
    </div>
</section>

<!--====== Breadcrumb-Area End ======-->
<!--====== Login-Area Start ======-->
<div class="login-area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 bg-white py-5 my-5">
                <div class="login">
                    <div class="login-text">
                        <h2 class="text-center fw-semibold geometric ls-1">REGISTER</h2> 
                    </div>
                    <div class="login-form px-4">
                        <form method="post">

                            <div class="form-group">
                                <label asp-for="@Model.Firstname">Firstname</label>
                                <input asp-for="@Model.Firstname" class="form-control" placeholder="Firstname">
                                <span class="text-danger text" asp-validation-for="Firstname"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Lastname">Lastname</label>
                                <input asp-for="@Model.Lastname" class="form-control" placeholder="Lastname">
                                <span class="text-danger text" asp-validation-for="Lastname"></span>

                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Username">Username</label>
                                <input asp-for="@Model.Username" class="form-control" placeholder="Username">
                                <span class="text-danger text" asp-validation-for="Username"></span>

                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Email">Email</label>
                                <input asp-for="@Model.Email" class="form-control" placeholder="Email">
                                <span class="text-danger text" asp-validation-for="Email"></span>

                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Password">Password</label>
                                <input asp-for="@Model.Password" class="form-control" placeholder="Password">
                                <span class="text-danger text" asp-validation-for="Password"></span>

                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.CheckPassword">CheckPassword</label>
                                <input asp-for="@Model.CheckPassword" class="form-control" placeholder="CheckPassword">
                                <span class="text-danger text" asp-validation-for="CheckPassword"></span>

                            </div>
                            <p class="description">The password should be at least eight characters long. To make it stronger, use upper and lower case letters, numbers, and symbols like ! " ? $ % ^ &amp; )</p>
                            <p class="description"> Already have an account? <a asp-controller="account" asp-action="login" class="text-primary">Login</a></p>
                            <button type="submit">Register</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--====== Login-Area End ======-->
